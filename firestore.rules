rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---
    
    // Validates string length
    function validString(text, max) {
      return text is string && text.size() <= max;
    }
    
    // Check if user has access to the board (Owner or Collaborator)
    // For evaluating existing documents (resource.data)
    // Check if user has access to the board (Owner or Collaborator)
    // For evaluating existing documents (resource.data)
    function hasAccess(data) {
      return (request.auth.uid == data.createdBy) || 
             ("allowedEmails" in data && data.allowedEmails is list && request.auth.token.email != null && request.auth.token.email in data.allowedEmails);
    }
    
    // Check if user is restricted to Viewer (Read-Only)
    // Note: viewer list might not exist on old boards
    function isViewer(data) {
       return "viewers" in data && data.viewers is list && request.auth.token.email != null && request.auth.token.email in data.viewers;
    }
    
    // Check if user is trying to WRITE valid board data (Owner must be self)
    function isValidBoardWrite() {
      return request.resource.data.createdBy == request.auth.uid;
    }

    // --- Rules ---

    // User Profiles & Nested Data (AI Usage)
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      match /ai_usage/{docId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Global Settings
    match /settings/{settingId} {
      allow read: if request.auth != null;
    }

    // System Stats (User Count)
    match /system/stats {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Todos (New Feature)
    match /todos/{todoId} {
      // Helper to check member access
      function isMember(data) {
        return "members" in data && data.members is list && request.auth.token.email in data.members;
      }
      
      allow get: if request.auth != null && isMember(resource.data);
      allow list: if request.auth != null && request.auth.token.email != null && request.auth.token.email in resource.data.members;
      allow create: if request.auth != null && "members" in request.resource.data && request.auth.token.email in request.resource.data.members;
      allow update, delete: if request.auth != null && isMember(resource.data);
    }

    match /boards/{boardId} {
      // 1. Board Document Rules
      // Split get and list to ensure query validation passes simply
      allow get: if request.auth != null && hasAccess(resource.data);
      allow list: if request.auth != null && request.auth.token.email != null && request.auth.token.email in resource.data.allowedEmails;
      allow create: if request.auth != null && isValidBoardWrite();
      allow update: if request.auth != null && hasAccess(resource.data) && !isViewer(resource.data);
      allow delete: if request.auth != null && resource.data.createdBy == request.auth.uid;
      
      // Shared Function for Subcollections
      function getBoardData() {
        return get(/databases/$(database)/documents/boards/$(boardId)).data;
      }
      
      // 2. Nodes
      match /nodes/{nodeId} {
        allow read: if request.auth != null && hasAccess(getBoardData());
        allow delete: if request.auth != null && hasAccess(getBoardData()) && !isViewer(getBoardData());
        allow create, update: if request.auth != null && hasAccess(getBoardData()) && !isViewer(getBoardData())
          && (!("content" in request.resource.data) || validString(request.resource.data.content, 20000))
          && (!("label" in request.resource.data) || validString(request.resource.data.label, 500))
          && (!("items" in request.resource.data) || request.resource.data.items.size() < 200)
          && (!("x" in request.resource.data) || request.resource.data.x is number)
          && (!("y" in request.resource.data) || request.resource.data.y is number);
      }
      
      // 3. Edges
      match /edges/{edgeId} {
        allow read: if request.auth != null && hasAccess(getBoardData());
        allow write: if request.auth != null && hasAccess(getBoardData()) && !isViewer(getBoardData());
      }
      
      // 4. Cursors (Ephemeral)
      match /cursors/{cursorId} {
        allow read: if request.auth != null && hasAccess(getBoardData());
        allow write: if request.auth != null && hasAccess(getBoardData()) && !isViewer(getBoardData());
      }

      // 5. Presence
      match /presence/{userId} {
        allow read: if request.auth != null && hasAccess(getBoardData());
        allow write: if request.auth != null && hasAccess(getBoardData()) && !isViewer(getBoardData());
      }

      // 6. Chat Messages
      match /messages/{msgId} {
        allow read: if request.auth != null && hasAccess(getBoardData());
        allow write: if request.auth != null && hasAccess(getBoardData()) && !isViewer(getBoardData());
      }
    }
  }
}
